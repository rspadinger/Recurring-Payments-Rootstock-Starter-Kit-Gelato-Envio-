{
    "compilerOptions": {
        "target": "ES2021",
        "lib": ["dom", "dom.iterable", "esnext", "ES2021"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false, // temporarily set to false for quick testing
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
